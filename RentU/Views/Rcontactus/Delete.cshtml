@model RentU.Models.Rcontactu

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="col-md-12">
    <div class="page-header-title">
        <h5 class="m-b-10"> Contact us Messages </h5>
    </div>
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Dashboard/Dashboard"><i class="feather icon-home"></i></a></li>
        <li class="breadcrumb-item"><a href="javascript:">Delete</a></li>
    </ul>
</div>
<hr />

<!-- Modal HTML -->
<div class="modal-dialog modal-confirm">
    <div class="modal-content" style="text-align:center">
        <div class="modal-header flex-column">
            <h4 class="modal-title w-100">Are you sure?</h4>
        </div>
        <div style="place-content:center">
            <hr />
            <dl class="dl-horizontal">
                <dt> Sender Name: </dt>
                <dd style="margin-top:20px">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt> Sender Email: </dt>
                <dd style="margin-top:20px">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt> Message: </dt>
                <dd style="margin-top:20px">
                    @Html.DisplayFor(model => model.Message)
                </dd>
            </dl>
            <div class="modal-body">
                <p>Do you really want to delete this message? This process cannot be undone.</p>
            </div>
            <div class="modal-footer justify-content-center">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Contid" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index" class="btn btn-secondary" data-dismiss="modal">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
