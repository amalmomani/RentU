<div class="row">

    <p>
        <a asp-action="Create" class="btn btn-primary" style="margin-left: 20px; margin-right: 20px ">Create New</a>
    </p>

</div>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="table-responsive table-bordered">
            <table class="table example">
                <thead>
                    <tr>
                        <th> Picture </th>
                        <th> Product Name</th>
                        <th> Price</th>
                        <th> Name </th>
                        <th> Email </th>
                        <th> Phone number</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                <img src=@Url.Content("~/Image/" + item.product.Image) style="width:200px; height:250px; object-fit:contain" />
                            </td>
                            <td style="max-width:20px; overflow:scroll">
                                @Html.DisplayFor(modelItem => item.product.Productname)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.product.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.product.User.Fullname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.product.User.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.product.User.Phonenumber)
                            </td>

                            <td>
                                <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                    <a href="/Rproducts/AddToCart/@item.product.Productid" type="submit" value="AddToCart" class="btn btn-primary">Add To Cart</a>
                                </div>
                            </td>
                        </tr>



                    }
                </tbody>

            </table>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.5.1.js"></script>

<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>

