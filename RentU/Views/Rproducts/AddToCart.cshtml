@model RentU.Models.Rorderproduct

@{
    Layout = "_UserLayout";
}

<div class="col-md-12">
    <div class="page-header-title">
        <h5 class="m-b-10"> Category </h5>
    </div>
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Dashboard/Dashboard"><i class="feather icon-home"></i></a></li>
        <li class="breadcrumb-item"><a href="javascript:">Create</a></li>
    </ul>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddToCart" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h3>This product will save at your bag, you can view it later to see its details </h3>   
            </div>
            <div class="form-group">
                <input type="submit" value="Continue" placeholder="Add to card" class="btn btn-primary" />
                <a href="/Rproducts/JoinTable" class="btn btn-secondary" data-dismiss="modal">Cancel</a>
            </div>
        </form>
    </div>
</div>