@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Register</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link rel="stylesheet" href="~/Register/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

    <!-- STYLE CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Register/css/style.css">
    <link href="~/Home/css/theme.css" rel="stylesheet" />

</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light fixed-top py-3 d-block" data-navbar-on-scroll="data-navbar-on-scroll">
        <div class="container">
            <a class="navbar-brand d-inline-flex" href="\Home\index">
                <img src="~/Home/img/gallery/logo.png" style="height:70px; width:200px ; object-fit:contain" />
            </a>
            <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse border-top border-lg-0 mt-4 mt-lg-0" id="navbarSupportedContent" style="padding-left:80px">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item px-2"><a class="nav-link fw-medium active" aria-current="page" href="/Home/Index"style="color: #c25252 ">Home</a></li>
                    <li class="nav-item px-2"><a class="nav-link fw-medium" href="/Home/Index/#shop"style="color: #c25252 ">Shops</a></li>
                    <li class="nav-item px-2"><a class="nav-link fw-medium" href="/Home/Index/#category"style="color: #c25252 ">Category</a></li>
                    <li class="nav-item px-2"><a class="nav-link fw-medium" href="/Home/Index/about"style="color: #c25252 ">About us</a></li>
                    <li class="nav-item px-2"><a class="nav-link fw-medium" href="/Home/Index/#Test"style="color: #c25252 ">Testemonial</a></li>
                    <li class="nav-item px-2"><a class="nav-link fw-medium" href="/Home/Index/#contact"style="color: #c25252 ">Contact us</a></li>
                    <li class="nav-item px-2"><span class="nav-link fw-medium">|</span></li>
                    <li class="nav-item px-2"><a class="nav-link fw-medium" href="\LoginRegister\Register"style="color: #c25252 ">Register</a></li>
                    <li class="nav-item px-2"><a class="nav-link fw-medium" href="/Home/Index/#Login"style="color: #c25252 ">Login</a></li>

                </ul>

            </div>
        </div>
    </nav>

    <section>
        <div class="col-lg-7 mx-auto text-center mb-6">
            <h5 class="fw-bold fs-3 fs-lg-5 lh-sm mb-3">Register</h5>
        </div>
        <div class="modal-content">
            <div class="inner">
                <div class="image-holder" style="padding-top:40px">
                    <img src="~/Register/images/registration-form-1.jpg">
                </div>
                <form asp-action="Register" method="POST" enctype="multipart/form-data">
                    <h3>Join Us!</h3>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-wrapper">
                        <input type="text" name="Fullname" id="Fullname" placeholder="Full Name" class="form-control" required />
                        <i class="zmdi zmdi-folder-person"></i>
                    </div>
                    <div class="form-wrapper">
                        <input type="email" name="Email" id="Email" placeholder="Email address" class="form-control" required />
                        <i class="zmdi zmdi-email"></i>
                    </div>
                    <div class="form-wrapper">
                        <input type="number" name="Phonenumber" id="Phonenumber" placeholder="Phone number" class="form-control" required />
                        <i class="zmdi zmdi-phone"></i>
                    </div>
                    <div class="form-wrapper">
                        <input type="password" name="Password" id="Password" placeholder="Password" class="form-control" required />
                        <i class="zmdi zmdi-lock"></i>
                    </div>

                    <div class="form-wrapper">
                        <input type="file" name="ImageFile" id="ImageFile" placeholder="Profile Picture" class="form-control" accept="image/*" />
                        <i class="zmdi zmdi-account"></i>
                    </div>

                    <button style="background-color: #c25252 ">
                        Register
                        <i class="zmdi zmdi-arrow-right"></i>
                    </button>
                    <p class="login-card-footer-text" style="padding-top:10px">Already have an account? <a href="/Home/Index/#Login" class="text-reset"><strong>Login here</strong></a></p>
                    @if (ViewBag.flag == 0)
                    {
                        <p style="color: red; text-align: center; padding: 10px; background-color: #f9b1b1">this email address has already been registered ! try another One or try to <a href="/Home/Index/#Login" class="text-reset"><strong>Login here</strong></a></p>
                    }
                </form>
            </div>
        </div>
    </section>
</body>
</html>
<script>

</script>