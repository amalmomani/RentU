@model IEnumerable<RentU.Models.Rmainpage>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="col-md-12">
    <div class="page-header-title">
        <h5 class="m-b-10">Manage</h5>
    </div>
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Dashboard/Dashboard"><i class="feather icon-home"></i></a></li>
        <li class="breadcrumb-item"><a href="javascript:"> Home Page </a></li>
    </ul>
</div>
<br />
<section class="ftco-section" id="blog-section">
    <div class="row">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="example" style="table-layout: fixed;">
                <thead>
                    <tr>
                        <th>Company Logo </th>
                        <th>Text1</th>
                        <th> Text2 </th>
                        <th> Company Email </th>
                        <th> Company phone number </th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src=@Url.Content("~/Image/" + item.Companylogo) style="width: 100px; height: 100px; object-fit: contain" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Text1)
                            </td>
                            <td style="overflow:scroll">
                                @Html.DisplayFor(modelItem => item.Text2)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Companyemail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Companyphone)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Homeid" class="btn btn-primary"><i class="fa fa-edit "></i>"Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    </section>