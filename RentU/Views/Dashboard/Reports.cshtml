@model Tuple<IEnumerable<JoinUserOrder>>
@{
    Layout = "_DashboardLayout";
}
<link href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" />





<div class="col-md-12">
    <div class="page-header-title">
        <h5 class="m-b-10">Reports</h5>
    </div>
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Dashboard/Dashboard"><i class="feather icon-home"></i></a></li>
        <li class="breadcrumb-item"><a href="javascript:"> Information </a></li>
    </ul>
</div>
<hr />
<div class="p-3 mb-2 bg-c-blue text-white" style="text-align:center; font-size:20px"> Orders </div>
<div class="panel panel-default">
    <form asp-action="Reports" method="post">
        <div class="row" style="Justify-content: space-between; display:flex">
            <div class="form-group col-4">
                <label class="form-label" for="startDate"> Start Date</label>
                <input type="date" name="startDate" class="form-control search-box" placeholder="Search..." />
            </div>
            <div class="form-group col-4" style="">
                <label class="form-label" for="endDate">End Date</label>
                <input type="date" name="endDate" class="form-control search-box" placeholder="Search..." />
            </div>
            <div class="form-group col-4" style="margin-top:30px">
                <button type="submit" class="btn btn-danger">Search</button>
            </div>
        </div>
    </form>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover example">
                <thead>
                    <tr>
                        <th> Full name</th>
                        <th> Product Name</th>
                        <th> Quantity </th>
                        <th> Total Amount</th>
                        <th> Order Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Item1)
                    {
                        if (item.orderproduct.Status == "1")
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.useraccount.Fullname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.product.Productname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.orderproduct.Numberofpieces)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.orderproduct.Totalamount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.order.Orderdate)
                                </td>
                            </tr>
                        }
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td>
                            Total sales
                        </td>
                        <td>@ViewBag.sales</td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>
                            Total Quantities
                        </td>
                        <td>@ViewBag.numberof</td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>
                            Orders
                        </td>
                        <td>@ViewBag.orders</td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>



<script src="https://code.jquery.com/jquery-3.5.1.js"></script>

<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>

<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js" defer></script>
<script>
    $(document).ready(function () {
        $('.example').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copyHtml5',
                'excelHtml5',
                'csvHtml5',
                'pdfHtml5'
            ]
        });
    });
</script>



