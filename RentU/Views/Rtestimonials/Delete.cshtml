@model RentU.Models.Rtestimonial

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="col-md-12">
    <div class="page-header-title">
        <h5 class="m-b-10">Reject review</h5>
    </div>
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Rcategory/Category"><i class="feather icon-home"></i></a></li>
        <li class="breadcrumb-item"><a href="javascript:">Review</a></li>
    </ul>
</div>
<hr />

<div class="modal-dialog modal-confirm">
    <div class="modal-content" style="text-align:center">
        <div class="modal-header flex-column">
            <h4 class="modal-title w-100">Are you sure?</h4>
        </div>
        <div style="place-content:center">
            <hr />
            <dl class="dl-horizontal">
                <dt> Sender : </dt>
                <dd style="margin-top:20px">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt> Review : </dt>
                <dd style="margin-top:20px">
                    @Html.DisplayFor(model => model.Message)
                </dd>
            </dl>

            <div class="modal-body">
                <p>Do you really want to Reject this Review? This process cannot be undone and the review will no longer display.</p>
            </div>
            <div class="modal-footer justify-content-center">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Testmoninalid" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index" class="btn btn-secondary" data-dismiss="modal">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>