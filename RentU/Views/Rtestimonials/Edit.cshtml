@model RentU.Models.Rtestimonial

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="col-md-12">
    <div class="page-header-title">
        <h5 class="m-b-10">Personal information</h5>
    </div>
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Rcategory/Category"><i class="feather icon-home"></i></a></li>
        <li class="breadcrumb-item"><a href="javascript:"> Edit Profile </a></li>
    </ul>
</div>
<hr />
<div class="col-md-9 personal-info">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Testmoninalid" />
                <div class="form-group" hidden>
                    <label asp-for="Message" class="control-label"></label>
                    <input asp-for="Message" class="form-control" />
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="Testimage" class="control-label"></label>
                    <input asp-for="Testimage" class="form-control" accept="image/*" />
                    <span asp-validation-for="Testimage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <select name="Status" id="Status" class="form-control">
                        <option value="Accept">Accept</option>
                        <option value="Under Process">Under Process</option>
                    </select>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="Userid" class="control-label"></label>
                    <select asp-for="Userid" class="form-control" asp-items="ViewBag.Userid"></select>
                    <span asp-validation-for="Userid" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary " />
                    <a asp-action="Index" class="btn btn-secondary" data-dismiss="modal">Cancel</a>
                </div>
            </form>
        </div>
    </div>

</div>